extends ../template
block content
    h1 Login
    .g-signin2(data-onsuccess='onSignIn')

    if errors
        each error in errors
            .alert.alert-danger= error
    form(action="/auth/login" method="POST")
        .form-group
            label(for="email") Email
            input#email.form-control(type="text" ,name="email",value=values ? values.email : '')
            label(for="pass") PassWord
            input#pass.form-control(type="password" ,name="password",value=values ? values.password : '')
            button.btn.btn-primary.mt-5 Login